/* #Media Queries
================================================== */

	/* Smaller than standard 960 (devices and browsers) */
	@media only screen and (max-width: 959px) {}

	/* Tablet Portrait size to standard 960 (devices and browsers) */
	@media only screen and (min-width: 768px) and (max-width: 959px) {}

	/* All Mobile Sizes (devices and browser) */
	@media only screen and (max-width: 767px) {}

		
	@media only screen and (min-width: 480px) and (max-width: 767px) {
		#header-nav-desktop{
			display:none;
		}
		#header-nav-mobile{
			display:block;
		}
		#header-logo-desktop{
			display:none;
		}
		#header-logo-mobile{
			display: block;
			padding-left:100px;
		}
		nav ul li{
			display: inline;
			margin: 0 0px 130px 45px;
		}
		nav ul li a{ 
			text-decoration:none;
		}
		#footer-a,#footer-b,#footer-c{
			display:none;
		}
		#footer-mobile{
			display:inline;
			width:121px;
			height:58px;
			background:url("../images/LookANkunSubLogo.png") no-repeat scroll 0px 0px transparent;
		}
		#footer-logo-desktop{
			display:none;
		}
		#footer-logo-mobile{
			display:block;
			width:121px;
			height:58px;
			background:url("../images/LookANkunSubLogo.png") no-repeat scroll 0px 0px transparent;
			margin:0px 0px 0px 175px;
		}
		#footer-nav-mobile{
			display:inline;
		}
	
	}

	/* Mobile Portrait Size to Mobile Landscape Size (devices and browsers) */
	@media only screen and (max-width: 479px) {
		#logo,nav ul{
		 text-align:center;
		}
		#header-nav-desktop-left,#header-nav-desktop-right{
			display:none;
		}
		#header-nav-mobile{
			display:block;
		}
		#header-logo-desktop{
			display:none;
		}
		#header-logo-mobile{
			display: block;
			padding-left:50px;
		}
		nav ul li{
			display: inline;
			margin: 0 15px 130px 7px;
		}
		nav ul li a{ 
			text-decoration:none;
		}
		#headerImage img{
			  margin: 10px 0 0 0;
		}
		
		#footer-a,#footer-b,#footer-c{
			display:none;
		}
		#footer-logo-desktop{
			display:none;
		}
		#footer-logo-mobile{
			display:block;
			width:121px;
			height:58px;
			background:url("../images/LookANkunSubLogo.png") no-repeat scroll 0px 0px transparent;
			margin:0px 0px 0px 90px;
		}
		#footer-nav-mobile{
			display: inline;
		}
		#logo{
		text-align:center;
		
		}

	}




